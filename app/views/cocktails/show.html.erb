<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= link_to 'Back', cocktails_path %>


<p>
  <strong>Dose:</strong>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete Dose', dose_path(dose),
      method: :delete,
      data: { confirm: 'are you sure?',
      class: 'btn btn-danger' }
     %></li>
    <% end %>
</p>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>


    </div>
  </div>
</div>



